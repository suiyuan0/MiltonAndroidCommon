<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dip">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView

            android:id="@+id/iv_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/swit"
            android:layout_toRightOf="@+id/iv_icon"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:singleLine="true"
            android:text="@string/app_name"
            android:textColor="#6A6A6A"
            android:textSize="24sp" />
        <com.milton.common.widget.SlideSwitch
            android:id="@+id/swit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            slideswitch:isOpen="true"
            slideswitch:shape="circle"
            slideswitch:themeColor="#1772D8"  />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <com.milton.common.widget.SlideSwitch
        android:id="@+id/swit2"
        android:layout_width="190dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        slideswitch:isOpen="true"
        slideswitch:shape="circle"
        slideswitch:themeColor="#ff0a5a00" />

    <com.milton.common.widget.SlideSwitch
        android:id="@+id/swit3"
        android:layout_width="20dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        slideswitch:isOpen="true"
        slideswitch:shape="circle"
        slideswitch:themeColor="#ff73aa00" />

    <com.milton.common.widget.SlideSwitch
        android:id="@+id/swit4"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_marginTop="10dip"
        slideswitch:isOpen="false"
        slideswitch:shape="circle"
        slideswitch:themeColor="#f200aa96" />

    <com.milton.common.widget.SlideSwitch
        android:id="@+id/swit5"
        android:layout_width="90dip"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        slideswitch:isOpen="false"
        slideswitch:shape="rect"
        slideswitch:themeColor="#f23331a0" />

</LinearLayout>