<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/tttitle"
        layout="@layout/layout_header_opaque" />

    <com.milton.common.widget.ColorTrackView
        android:id="@+id/id_changeTextColorView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tttitle"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="#44ff0000"
        android:padding="10dp"
        zhy:progress="0"
        zhy:text="ColorTrackView"
        zhy:text_change_color="#ffff0000"
        zhy:text_origin_color="#ff000000"
        zhy:text_size="30sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <Button
            android:id="@+id/id_left"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:onClick="startLeftChange"
            android:text="StartLeft"
            android:textSize="13sp" />

        <Button
            android:id="@+id/id_right"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:onClick="startRightChange"
            android:text="StartRight"
            android:textSize="13sp" />

        <Button
            android:id="@+id/id_top"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_left"
            android:layout_margin="10dp"
            android:onClick="startTopChange"
            android:text="StartTop"
            android:textSize="13sp" />

        <Button
            android:id="@+id/id_bottom"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/id_right"
            android:layout_margin="10dp"
            android:onClick="startBottomChange"
            android:text="StartBottom"
            android:textSize="13sp" />

    </RelativeLayout>

</RelativeLayout>