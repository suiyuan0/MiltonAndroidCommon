<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#666" >

    <LinearLayout
        android:id="@+id/logout_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_weight="0"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/unlog_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="34dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/mobie_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer_mobile" />

            <ImageView
                android:id="@+id/qzone_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:src="@drawable/ic_drawer_qzone" />

            <ImageView
                android:id="@+id/weibo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_drawer_weibo" />
        </LinearLayout>

        <TextView
            android:id="@+id/user_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="登录后，将推荐给你更多感兴趣的文章"
            android:textColor="#ffb8b8b8"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/logout_layout"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/item_1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center" >

            <FrameLayout
                android:id="@+id/view_msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="2dp"
                    android:src="@drawable/ic_stat_dm" />
            </FrameLayout>

            <TextView
                android:id="@+id/title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/view_msg_layout"
                android:text="我的消息"
                android:textColor="#ffd4d4d4"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_0"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_0"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_news_list_tag_video" />

            <TextView
                android:id="@+id/title_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_0"
                android:text="我的活动"
                android:textColor="#ffd4d4d4"
                android:textSize="16sp" />
        </RelativeLayout>

        <!--
        <RelativeLayout 
            android:id="@+id/item_2"
            android:layout_width="match_parent"
    		android:layout_height="40dp"
    		android:gravity="center"
    		android:layout_marginTop="14dp"
    		android:background="@drawable/bg_left_drawer">
            <ImageView 
                android:id="@+id/img_2"
                android:layout_width="25dp"
    			android:layout_height="25dp"
    			android:src="@drawable/biz_news_list_tag_audio"/>
            <TextView 
                android:id="@+id/title_2"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_2"
                android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:textColor="#ffd4d4d4"
    			android:textSize="16sp"
    			android:text="信息平台"/>
        </RelativeLayout>
        -->

        <RelativeLayout
            android:id="@+id/item_3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_3"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_news_pread_update_divider_image" />

            <TextView
                android:id="@+id/title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_3"
                android:text="我的收藏"
                android:textColor="#ffd4d4d4"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_4"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_4"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_pc_list_polymetric_icon" />

            <TextView
                android:id="@+id/title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_4"
                android:text="个人设置"
                android:textColor="#ffd4d4d4"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_5"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/img_5"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/biz_pc_list_search_icon" />

            <TextView
                android:id="@+id/title_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/img_5"
                android:text="便利工具"
                android:textColor="#ffd4d4d4"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/item_6"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="14dp"
            android:gravity="center" >
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>