<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.milton.common.demo">

    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 震动权限 -->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.milton.common.demo.AppApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.milton.common.demo.activity.MainActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:name="com.milton.common.demo.activity.SplashActivity"
            android:label="SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.LoginActivity"
            android:label="LoginActivity"></activity>
        <!-- Sliding  BEGIN -->
        <activity android:name="com.milton.common.demo.activity.sliding.DrawerLayoutActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.sliding.SlidingMenuActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.sliding.SlidingQQActivity"></activity>
        <!-- Sliding  END -->
        <!-- Activities  BEGIN -->
        <activity android:name="com.milton.common.demo.activity.activities.CityListActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.ChannelActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.LoginActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.RegisterActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.RegisterConfirmActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.CitySelectActivity0"></activity>
        <activity android:name="com.milton.common.demo.activity.activities.CitySelectActivity"></activity>

        <service
            android:name="com.baidu.location.f"
            android:enabled="true"
            android:process=":remote"></service>
        <!-- Activities  END -->


        <!-- ImageLoader BEGIN -->
        <activity android:name="com.milton.common.demo.activity.imageloader.FrescoActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.imageloader.HttpLoaderActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.imageloader.UniversalImageLoaderActivity"></activity>
        <activity android:name="com.milton.common.demo.activity.imageloader.VolleyActivity"></activity>
        <!-- ImageLoader END -->


        <!-- Util Activities  begin -->
        <activity android:name="com.milton.common.demo.activity.util.UtilsActivity"></activity>
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsContextActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsResourceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsStringActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <!-- Util Activities  end -->
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsNetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.util.UtilsNotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.milton.common.demo.activity.util.NotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.UtilsActivity" />
            </intent-filter>
        </activity>
        <!-- Other Begin -->
        <activity android:name="com.milton.common.demo.activity.other.SilentInstallActivity"></activity>

        <service
            android:name="com.milton.common.demo.activity.other.SilentInstallAccessibilityService"
            android:label="我的智能安装"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>

            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

        <activity android:name="com.milton.common.demo.activity.other.SilentInstallFileExplorerActivity" />
        <!-- Other End -->
    </application>

</manifest>